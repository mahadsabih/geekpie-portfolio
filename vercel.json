{
  "version": 2,
  "public": true,
  "functions": {
    "mern-app/server/server.js": {
      "runtime": "@vercel/node",
      "includeFiles": "**/*.js",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/mern-app/server/server.js"
    },
    {
      "source": "/admin",
      "destination": "/mern-app/client/build/index.html"
    },
    {
      "source": "/admin/:path*",
      "destination": "/mern-app/client/build/index.html"
    },
    {
      "source": "/login",
      "destination": "/mern-app/client/build/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/mern-app/client/build/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/mern-app/server/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/mern-app/server/uploads/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/mern-app/client/build/static/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(admin|login|dashboard)(.*)",
      "dest": "/mern-app/client/build/index.html"
    },
    {
      "src": "/(wp-content/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(js/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(images/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(portfolio/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(ai-sector/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(contact-us/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(404-page/.*)",
      "dest": "/$1"
    },
    {
      "src": "/(api/.*)",
      "dest": "/mern-app/server/server.js"
    },
    {
      "src": "/(.*)\\.(html|css|js|json|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot)$",
      "dest": "/$1.$2"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/wp-content/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
